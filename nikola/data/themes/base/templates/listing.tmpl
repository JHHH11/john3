## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>
<%namespace name="ui" file="crumbs.tmpl" import="bar"/>
<%block name="content">
${ui.bar(crumbs)}
%if folders or files:
<ul>
% for name in folders:
    % if use_urlencoding:
        <li><a href="${name|u}"><i class="icon-folder-open"></i> ${name|h}</a>
    % else:
        <li><a href="${name}"><i class="icon-folder-open"></i> ${name|h}</a>
    % endif
% endfor
% for name in files:
    % if use_urlencoding:
        <li><a href="${name|u}.html"><i class="icon-file"></i> ${name|h}</a>
    % else:
        <li><a href="${name}.html"><i class="icon-file"></i> ${name|h}</a>
    % endif
% endfor
</ul>
%endif
% if code:
    ${code}
% endif
% if source_link:
    <p class="sourceline"><a href="${source_link}" id="sourcelink">${messages("Source")}</a></p>
% endif
</%block>

